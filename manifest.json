{
    "name": "Duo Passcode Generator",
    "description": "Generates HOTP Passcodes for Duo Security OAuthentication",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js", "jsOTP.min.js"]
    },
    "content_scripts": [{
        "matches": [ "*://*.duosecurity.com/*" ],
        "js": ["content.js"],
        "all_frames": true
    }],
    "permissions": ["storage", "clipboard-write", "https://*/"],
    "browser_action": {
        "default_popup": "./popup.html"
    }
}